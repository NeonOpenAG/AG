<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}OAG Toolbox{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <h1>{% block h1 %}OAG Toolbox{% endblock %}</h1>

        <div id="toolstatus">
            {% block toolstatus %}
            {% endblock %}
        </div>

        <div id="content">
        {% block body %}{% endblock %}
    </div>

    {% block javascripts %}
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
</body>
</html>